    "def persistence(n):\n",
    "    import numpy as np\n",
    "    i = 0\n",
    "    while n>9:\n",
    "        digits = [int(dig) for dig in str(n)]\n",
    "        n = np.prod(digits)\n",
    "        i+=1\n",
    "        \n",
    "    return i"
   ]
